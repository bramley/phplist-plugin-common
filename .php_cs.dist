<?php

$finder = PhpCsFixer\Finder::create()
    ->in(__DIR__)
    ->exclude('plugins/CommonPlugin/ext')
    ->exclude('plugins/CommonPlugin/vendor')
    ->exclude('plugins/CommonPlugin/images')
    ->exclude('*.tpl.php')
;

return PhpCsFixer\Config::create()
    ->setRules(array(
        '@PSR1' => true,
        '@PSR2' => true,
        '@Symfony' => true,
        'concat_space' => false,
        'phpdoc_no_alias_tag' => false,
    ))
    ->setFinder($finder)
;
